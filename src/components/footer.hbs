{{#with footer}}
<footer
  id="footer"
  class="footer"
>
  <div class="container row">
    <div class="row col-12">
      <div class="row col-3 col-sm-12 footer__first-row">
        <div class="row col-12 col-sm-9">
          <img
            src="/src/images/logo_white.svg"
            alt=""
            class="footer-logo col-5"
          >
        </div>
        <div class="row col-12 col-sm-3">
          <div class="col-1 col-sm-2">
            <a href="">
              <img
                src="/src/images/inst.svg"
                alt=""
              >
            </a>
          </div>
          <div class="col-1 col-sm-2">
            <a href="">
              <img
                src="/src/images/fb.svg"
                alt=""
              >
            </a>
          </div>
        </div>
      </div>
      {{!-- <div class="col-1"></div> --}}
      <div class="col-5 col-sm-4">
        <ul class="footer-links _first">
          {{#each clientLinks}}
          <li class="footer-link">
            <a href="{{this.link}}">{{this.text}}</a>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="col-4 col-sm-8">
        <ul class="footer-links">
          {{#each serviceLinks}}
          <li class="footer-link">
            <a href="{{this.link}}">{{this.text}}</a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
    <hr class="footer-divider col-12">
    <div class="row _no-gap col-12">
      <div class="col-6 col-sm-12 footer__message _copy-right" style="order:1">{{copyRight}}</div>
      <hr class="footer-divider _mobile col-sm-12" style="order:2">
      <div class="col-6 col-sm-12 footer__message _address" style="order:3">{{address}}</div>
    </div>
  </div>
</footer>
{{/with}}
