<button
  id="menu-button"
  type="button"
  class="sidebar__button hamburger hamburger--spring {{variant}}"
  aria-label="Menu"
  aria-controls="navigation"
>
  <span class="hamburger-box">
    <span class="hamburger-inner"></span>
  </span>
</button>

{{#with header}}
<aside id="sidebar" class="sidebar">
  <div class="sidebar__content">
    <ul class="sidebar-menu">
      {{#each menu}}
      <li class="sidebar-menu__item">
        <a
          href="{{this.link}}{{this.anchor}}"
          class="sidebar-menu__item-link"
        >{{this.text}}</a>
      </li>
      {{/each}}
      <li class="sidebar-menu__item-link _social">
        <a href="">{{> icon-inst}}</a>
        <a href="">{{> icon-fb}}</a>
      </li>
    </ul>
  </div>

  <div class="sidebar__right-panel">
    <div class="sidebar__avatar">
      <img src="/src/images/header_avatar.png" class="sidebar__image" >
    </div>
    <a
      href=""
      class="sidebar__personal-link"
    >Личный кабинет</a>
  </div>
</aside>
{{/with}}
